{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": false
  },
  "extends": "airbnb-base",
  "rules": {
    "arrow-body-style": [2, "as-needed"],
    "arrow-parens": [2, "as-needed"],
    "comma-dangle": 0,
    "no-var": 0,
    "prefer-arrow-callback": 0,
    "padded-blocks" : 0,
    "max-len": 0,
    "vars-on-top": 0,
    "object-shorthand": 0
  }
}
